@model MarketOnlineWebsite.Models.Advertisement

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Advertisement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AdvertisementsId" />
            <div class="form-group">
                <label asp-for="SubTitle" class="control-label"></label>
                <input asp-for="SubTitle" class="form-control" />
                <span asp-validation-for="SubTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageBg" class="control-label"></label>
                <input asp-for="ImageBg" class="form-control" />
                <span asp-validation-for="ImageBg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageProduct" class="control-label"></label>
                <input asp-for="ImageProduct" class="form-control" />
                <span asp-validation-for="ImageProduct" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrlLink" class="control-label"></label>
                <input asp-for="UrlLink" class="form-control" />
                <span asp-validation-for="UrlLink" class="text-danger"></span>
            </div>
